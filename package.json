{
	"name": "perlinoise",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@types/bun": "latest",
		"@iconify/json": "^2.2.314",
		"@iconify/tailwind4": "^1.0.6",
		"daisyui": "^5.0.0",
		"tailwindcss-animated": "2.0.0",
		"tailwindcss": "4.1.4"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@iconify/json": "^2.2.329",
		"@iconify/tailwind4": "^1.0.6",
		"daisyui": "^5.0.27",
		"tailwindcss-animated": "^2.0.0"
	},
	"scripts": {
		"build": "cp ./src/index.html ./docs/ && bun run build:script && bun run tailwind:script",
		"build:script": "bun build ./src/script.ts --outfile docs/script.js",
		"tailwind:script": "bunx tailwindcss -i ./input.css -o ./docs/style.css --minify",
		"watch": "bunx tailwindcss -i ./input.css -o ./docs/style.css --watch"
	}
}
